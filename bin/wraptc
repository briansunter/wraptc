#!/usr/bin/env bun

const args = process.argv.slice(2);

// Check if --mcp flag is present or first command is 'mcp'
if (args.includes('--mcp') || args[0] === 'mcp') {
  // Run MCP server from source
  import('../src/mcp/server.ts');
} else {
  // Run CLI from source
  import('../src/cli/index.ts');
}
